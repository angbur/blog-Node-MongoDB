<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <link rel="stylesheet" href="../../css/style.css" type="text/css">
  <link rel="icon" type="image/x-icon" href="../../css/favicon.png">
  <title>Blog</title>
</head>
<body>
  <div class="container my-4">
    <h1 class="mt-4">Edit Article</h1>
    <form action="/articles/<%= article.id %>?_method=PUT" method="POST" enctype="multipart/form-data">
      <div class="form-group mb-4">
        <label for="title">Title</label>
        <input required value="<%= article.title %>" type="text" name="title" id="title" class="form-control">
      </div>
      <div class="mb-4">
        <label for="image">Current Image:</label><br/>
        <img id="blah" src="#" alt="Your image..." hidden=true height="100px" class="my-4"/>
        <img id="image-from-api" class="my-4" height="100px" src="../../uploads/<%= article.img.name %>"> 
        <div class="row">
          <label id="hidden-text" class="mb-4" for="image">If you want change, upload new image here:</label>
          <input type="file" id="imgInp" accept="image/*" name="image" value="<%= article.img.name %>">
        </div>
       
      </div>
      <div class="form-group mb-4">
        <label for="description">Short description</label>
        <textarea name="description" id="description" class="form-control"><%= article.description %></textarea>
      </div>
      <div class="form-group mb-4">
        <label for="content">Content</label>
        <textarea name="content" id="content" class="form-control" rows="5"><%= article.content %></textarea>
      </div>
      
      <a href="/" class="btn btn-secondary">Cancel</a>
      <button type="submit" class="btn btn-primary">Save</button>
    </form>
  </div>
  <script>
    imgInp.onchange = evt => {
      const [file] = imgInp.files
      if (file) {
        blah.src = URL.createObjectURL(file);
        blah.hidden = false;
        document.getElementById("image-from-api").hidden = true;
        document.getElementById("hidden-text").hidden = true;
    }}
  </script>
</body>
</html>